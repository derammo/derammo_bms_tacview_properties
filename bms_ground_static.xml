<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<DefaultPropertiesCollection LoadingOrder="0.5">
    <!-- Maps Ground+Static objects (all buildings and decorations) to white boxes by default. -->
    <!-- 
    
    WARNING: 
    
        this is currently pointless in BMS and only retained here for future reference, as 4.37 does 
        not emit static objects except in the initial bubble 
    
    -->
    <DefaultProperties Id="Core.Building_BMS" Base="Core.Building">
        <Criteria>
            <Type>Ground+Static</Type>
            <Name>*</Name>
        </Criteria>
        <Properties>
            <AdditionalType>Ground+Static+Building</AdditionalType>
            <Color>White</Color>
        </Properties>
    </DefaultProperties>
</DefaultPropertiesCollection>
<!-- 

INSTALL:

create some .xml file in %APPDATA%\Tacview\Data\Database\Default Properties\
with these contents

-->